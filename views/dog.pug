extends layout
block content
    div(class="container-fluid")
        h1= title
    - let items = results    
        div(class="row")
            each form,index in results
                div(class = "col-sm-2 bg-primary" onclick=`buy(${index})`) #{form.dog_color}              
                div(class = "col-sm-2 bg-primary" onclick=`buy(${index})`) #{form.dog_breed}                
                div(class = "col-sm-2 bg-primary" onclick=`buy(${index})`) #{form.dog_price}
                hr
    script.
        function buy(itemNo)
        {
            alert(`You purchased Item ${itemNo+1}`)
        }